<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.SSAFP.UniCode.model.board.repo.BoardRepo">
	
	<insert id="writeArticle" parameterType="board">
		insert into board (uid, bcid, title, content, created_time, updated_time, hit) 
		values(#{uid}, #{bcid}, #{title}, #{content}, now(), now(), 0)
		<selectKey resultType="int" keyProperty="bid" order="AFTER">
			select last_insert_id()
		</selectKey>
	</insert>
	
	<update id="modifyArticle" parameterType="board">
		update board
		<set>
			<if test = "bcid != null">
				bcid = #{bcid},
			</if>
			<if test = "title != null">
				title = #{title},
			</if>
			<if test = "content != null">
				content = #{content},
			</if>
			updated_time = now()
		</set>
		where bid = #{bid}
	</update>
	
	<select id="getAllArticle" parameterType="string" resultMap="baseBoardMap">
		select * from board
		where bcid = #{bcid}
	</select>
	
	<select id="getArticle" parameterType="int" resultMap="baseBoardFileMap">
		select * from board
		where bid = #{bid}
	</select>
	
	<delete id="deleteArticle" parameterType="int">
		delete from board
		where bid = #{bid}
	</delete>
	
	<insert id="uploadFileList" parameterType="board">
		insert into file_info (bid, type, save_folder, origin_file, save_file)
		values
		<foreach collection="fileList" item="file" separator=" , ">
			(#{bid}, "file", #{file.saveFolder}, #{file.originFile}, #{file.saveFile})
		</foreach>
	</insert>
	
	<insert id="uploadImageList" parameterType="board">
		insert into file_info (bid, type, save_folder, origin_file, save_file)
		values
		<foreach collection="imageList" item="file" separator=",">
			(#{bid}, "image", #{file.saveFolder}, #{file.originFile}, #{file.saveFile})
		</foreach>
	</insert>
	
	<delete id="deleteFileList" parameterType="int">
		delete from file_info
		where bid = #{bid}
	</delete>
	
	<select id="getFileList" parameterType="int" resultMap="baseFileInfoMap">
		select * from file_info
		where bid = #{bid}
	</select>
	
	<select id="fileList" resultMap="baseFileInfoMap">
		select * from file_info
		where type="file" and bid = #{bid}
	</select>
	
	<select id="imageList" resultMap="baseFileInfoMap">
		select * from file_info
		where type="image" and bid = #{bid}
	</select>
	
	<update id="updateHit" parameterType="int">
		update board
		set hit = hit + 1
		where bid = #{bid}
	</update>
	
	<select id="getLike" parameterType="boardLike" resultType="int">
		select count(*) from board_like
		where bid = #{bid} and uid = #{uid}
	</select>
	
	<insert id="likeTrue" parameterType="boardLike">
		insert into board_like (bid, uid)
		values (#{bid}, #{uid})
	</insert>
	
	<delete id="likeFalse" parameterType="boardLike">
		delete from board_like
		where bid = #{bid} and uid = #{uid}
	</delete>
	
	<resultMap type="board" id="baseBoardMap">
		<id column="bid" property="bid"/>
		<result column="uid" property="uid"/>
		<result column="bcid" property="bcid"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="hit" property="hit"/>
		<result column="created_time" property="createdTime"/>
		<result column="updated_time" property="updatedTime"/>
	</resultMap>
	
	<resultMap type="board" id="baseBoardFileMap" extends="baseBoardMap">
		<collection property="fileList" column="bid" javaType="list" ofType="fileInfo" select="fileList"/>
		<collection property="imageList" column="bid" javaType="list" ofType="fileInfo" select="imageList"/>
	</resultMap>
	
	<resultMap type="fileInfo" id="baseFileInfoMap">
		<id column="fid" property="fid"/>
		<result column="bid" property="bid"/>
		<result column="type" property="type"/>
		<result column="save_folder" property="saveFolder"/>
		<result column="origin_file" property="originFile"/>
		<result column="save_file" property="saveFile"/>
	</resultMap>
	
</mapper>