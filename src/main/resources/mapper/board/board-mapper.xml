<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.SSAFP.UniCode.model.board.repo.BoardRepo">
	
	<insert id="writeArticle" parameterType="board">
	</insert>
	
	<select id="getAllArticle" parameterType="boardCategory" resultType="board">
		
	</select>
	
	<select id="getArticle" parameterType="int" resultType="board">
	</select>
	
	<delete id="deleteArticle" parameterType="int">
	</delete>
	
	<insert id="uploadFileList" parameterType="board">
	</insert>
	
	<select id="fileInfoList" resultType="fileInfo">
	</select>
	
	<resultMap type="board" id="baseBoardMap">
		<id column="bid" property="bid"/>
		<result column="uid" property="uid"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="hit" property="hit"/>
		<result column="created_time" property="createdTime"/>
		<result column="updated_time" property="updatedTime"/>
	</resultMap>
	
	<resultMap type="board" id="baseBoardFileMap" extends="baseBoardMap">
		<collection property="fileList" column="bid" javaType="list" ofType="fileInfo" select="fileInfoList"/>
	</resultMap>
	
</mapper>