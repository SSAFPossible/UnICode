<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="org.SSAFP.UniCode.model.board.repo.StudyBoardRepo">


	<select id="getAllStudyBoard"
		parameterType="studyBoardParam" resultType="studyBoard">
		select * from board
		<if test="category=='' and tag==''">
			where bcid regexp 'algo|job|cs'
		</if>

		<if test="category!='' and tag==''">
			where bcid like concat(#{category},"%")
		</if>

		<if test="category=='' and tag!=''">
			where bcid like concat("%","_",#{tag})
		</if>

		<if test="category!='' and tag!=''">
			where bcid like concat(#{category},"_",#{tag})
		</if>
		<if test="uid!=''">
			and uid=#{uid}
		</if>
		<if test="sortLike==true">
			order by `like` desc
		</if>
		<if test="sortLike!=true">
			order by created_time
		</if>
	</select>

	<update id="increaseLike" parameterType="int">
		update board set
		`like` = `like` + 1 where bid=#{bid}
	</update>

	<select id="getStudyBoard" parameterType="int"
		resultType="studyBoard">
		select * from board where bid=#{bid}
	</select>

</mapper>


	