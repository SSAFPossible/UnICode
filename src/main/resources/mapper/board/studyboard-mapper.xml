<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="org.SSAFP.UniCode.model.board.repo.StudyBoardRepo">

	<resultMap type="studyBoard" id="baseStudyBoardMap">
		<id column="bid" property="bid"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="created_time" property="createdTime"/>
		<result column="updated_time" property="updatedTime"/>
		<result column="uid" property="uid"/>
		<result column="hit" property="hit"/>
		<result column="like" property="like"/>
		<result column="bcid" property="bcid"/>
	</resultMap>
	
	
	<select id="getAllBoardArticle" resultMap="baseStudyBoardMap">
		select * from board
		where bcid regexp 'algo|job|cs'
	</select>


</mapper>


	